class Solution {
    public int[] numMovesStones(int a, int b, int c) {
        int ans[]=new int[2];

        int z=Math.max(a,(Math.max(b,c)));
        int x=Math.min(a,(Math.min(b,c)));

        int y=(a+b+c)-(x+z);

        int left=y-x;
        int right=z-y;

        left-=1;
        right-=1;

        if(left==right && left==0){
            ans[0]=0;
            ans[1]=0;
            return ans;
        }
        else if(left==0 || right==0){
            ans[0]=1;
            ans[1]=Math.max(left,right);
            return ans;
        }
        else if(left==1 ||right==1){
            ans[0]=1;
            ans[1]=left+right;
            return ans;
        }
        else if(left!=1 && right!=1){
            ans[0]=2;
            ans[1]=left+right;
            return ans;
        }
 
        return ans;
    }
}
